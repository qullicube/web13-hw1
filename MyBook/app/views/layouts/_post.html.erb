<% posts.each do |post| %>

<% msgClass = cycle("pull-right","pull-left",:name => 'msg') %>
<% commentClass = cycle("pull-left","pull-right",:name =>"comment") %>

<div class = "well divfix"  style="border-top:10px solid #00CCFF">
      		<div class="<%= msgClass %>">
          <ul class="nav nav-pills">
              <li>
              <div class="btn " href="#" style="margin-left:10px;"><i class="icon-star"></i> Like
              </div>
              </li>
              <li>
              <div class="input-prepend">
                <form style="margin-left:10px" class="form-small">
                  <span class="add-on"><i class="icon-envelope"></i></span>
                  <input class="span2 input-large" id="inputIcon" type="text" placeholder="Comment">
                </form>                           
              </div>
              </li>
            </ul>
      		</div>
      		
      		<textarea class="status <%= commentClass %>" style="color: rgb(51, 51, 51);padding-top=10px; padding-left=10px" readonly><%= post.body %></textarea>
</div>

<% end %>